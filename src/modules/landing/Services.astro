---
import MaxWidthWrapper from "@/common/components/MaxWidthWrapper.astro";

const services = [
  {
    title: "Oberfit",
    description: "Entrenamiento personalizado con coachs certificados",
    image: "/ober-brand/gym.webp",
  },
  {
    title: "Natación",
    description: "Clases de natación para todas las edades y niveles",
    image: "/ober-brand/natacion.webp",
  },
  {
    title: "Ballet",
    description: "Expresiones artísticas y corporales, mejorando día a día",
    image: "/ober-brand/ballet.webp",
  },
];

const otherServices = [
  "Nutrición",
  "Terapia Fisica",
  "Barra de comida",
  "Tienda Oberfit",
  "Ciclismo",
];
---

<section class="py-32">
  <MaxWidthWrapper
    className="relative z-10 flex flex-col w-full justify-center items-center"
  >
    <h2
      class="text-6xl sm:text-7xl md:text-8xl font-bold text-black text-center tracking-tighter"
    >
      Tus Servicios Favoritos
    </h2>

    <section class="grid grid-cols-1 gap-4 md:grid-cols-3 md:gap-8 my-10">
      {
        services.map((service) => (
          <article class="relative aspect-[4/3] rounded-md overflow-hidden group">
            <div class="absolute inset-0 transition-all duration-300">
              <figure>
                <img
                src={service.image}
                alt={service.title}
                class="w-full h-full object-cover brightness-75 grayscale group-hover:brightness-110 group-hover:scale-105 group-hover:grayscale-0 transition-all duration-300"
              />
              </figure>
            </div>
            <section class="relative z-10 h-full flex items-center justify-center text-center text-white bg-black bg-opacity-50">
              <article class="space-y-4 p-8 text select-none">
                <p class="text-4xl font-bold tracking-tighter sm:text-5xl md:text-6xl">
                  {service.title}
                </p>
                <p class="text-lg md:text-xl">{service.description}</p>
              </article>
            </section>
          </article>
        ))
      }
    </section>

    <h3
      class="text-2xl sm:text-3xl md:text-4xl font-bold text-black text-center tracking-tighter"
    >
      Otros Servicios:
    </h3>

    <section class="flex flex-wrap items-center justify-center gap-4 mt-4">
      {
        otherServices.map((service) => (
          <div class="border-2 border-black rounded-full px-3 py-1 hover:bg-black hover:text-white transition-all duration-300 select-none">
            <p class="text-xl font-semibold text-center tracking-tighter">
              {service}
            </p>
          </div>
        ))
      }
    </section>
  </MaxWidthWrapper>
</section>
